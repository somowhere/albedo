<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.albedo.java.modules.sys.repository.DeptRepository">


	<select id="findVoList" resultType="com.albedo.java.modules.sys.domain.vo.DeptVo">
		SELECT
		*
		FROM
		sys_dept
		<where>
			${ew.sqlSegment}
		</where>
	</select>

	<select id="findListByRoleId" resultType="com.albedo.java.modules.sys.domain.Dept">
		SELECT
            a.*
        FROM
        sys_dept a, sys_role_dept b WHERE a.id = b.dept_id AND a.del_flag = 0 and a.available = 1 and b.role_id = #{roleId}
	</select>

</mapper>
